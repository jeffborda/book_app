<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
</head>
<body>
  
  <main>
    <nav>
      <h1>Best Books!</h1>
    </nav>
    <div class="search-by">
      <h2>Search By Title Or Author</h2>
    </div>

    <p><a href="/searches/new">Search A New Book</a></p>


    <!-- Results From Database  -->
    <h1>Database Results</h1>
    
    <ul>
      <% bookList.forEach( book => { %>
        <form action= "/home-detail/<%=book.id%>" method="GET">
            <li><%=book.title %></li>
            <li><%=book.author %></li>
            <img src="<%=book.image_url %>" alt="book image">
            <li><%=book.description %></li>
            <li><%=book.isbn %></li>
            <button> Show Detail </button>
        </form>
        <% }) %>
    </ul>


  </form>
  </main>
</body>

</html>